<p id="notice"><%= notice %></p>

<h1>Battles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Pet1</th>
      <th>Pet2</th>
      <th>Battled on</th>
      <th>Winning pet</th>
      <th>Winning user</th>
      <th>Battle game</th>
      <th>Status</th>
      <th>Play for keeps</th>
      <th>Is tie</th>
      <th>Winner experience</th>
      <th>Loser experience</th>
      <th>Winner gold</th>
      <th>Updated by</th>
      <th>Created by</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.name %></td>
        <td><%= battle.description %></td>
        <td><%= battle.pet1_id %></td>
        <td><%= battle.pet2_id %></td>
        <td><%= battle.battled_on %></td>
        <td><%= battle.winning_pet_id %></td>
        <td><%= battle.winning_user_id %></td>
        <td><%= battle.battle_game_id %></td>
        <td><%= battle.status %></td>
        <td><%= battle.play_for_keeps %></td>
        <td><%= battle.is_tie %></td>
        <td><%= battle.winner_experience %></td>
        <td><%= battle.loser_experience %></td>
        <td><%= battle.winner_gold %></td>
        <td><%= battle.updated_by %></td>
        <td><%= battle.created_by %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Battle', new_battle_path %>
